---
import Layout from "./Layout.astro";

interface Props {
  title?: string;
}

const { title = "Autentykacja | 10x Cards" } = Astro.props;
---

<Layout title={title}>
  <div
    class="relative w-full mx-auto min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-blue-900 p-4 sm:p-8 flex items-center justify-center"
  >
    <div
      class="relative w-full max-w-md backdrop-blur-xl bg-gradient-to-b from-white/10 to-white/5 rounded-2xl shadow-2xl p-8 text-white border border-white/10"
    >
      <div class="flex flex-col items-center mb-6">
        <div
          class="w-16 h-16 bg-gradient-to-br from-blue-400 to-purple-400 rounded-full flex items-center justify-center mb-4"
        >
          <span class="text-2xl font-bold">10x</span>
        </div>
        <h1
          class="text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-200 via-purple-200 to-pink-200"
        >
          <slot name="title">10x Cards</slot>
        </h1>
      </div>

      <slot />

      <div class="mt-8 text-center text-sm text-blue-100/70">
        <slot name="footer" />
      </div>
    </div>
  </div>
</Layout>
