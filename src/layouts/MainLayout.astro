---
import Layout from "./Layout.astro";
import Navbar from "../components/common/Navbar.astro";

interface Props {
  title?: string;
}

const { title = "10x Cards" } = Astro.props;

// Pobieranie danych użytkownika z locals
const { user } = Astro.locals;
---

<Layout title={title}>
  <div class="min-h-screen bg-gray-900 text-white flex flex-col">
    <Navbar user={user} />

    <main class="flex-grow container mx-auto p-4">
      <slot />
    </main>

    <footer class="bg-gray-800 p-4 text-center text-gray-400 text-sm">
      <p>&copy; {new Date().getFullYear()} 10x Cards. Wszystkie prawa zastrzeżone.</p>
    </footer>
  </div>
</Layout>

