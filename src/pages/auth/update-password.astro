---
import AuthLayout from "../../layouts/AuthLayout.astro";
import UpdatePasswordForm from "../../components/auth/UpdatePasswordForm";

// Pobranie tokenu z parametrów URL
const token = Astro.url.searchParams.get('token') || undefined;
---

<AuthLayout title="Ustawienie nowego hasła | 10x Cards">
  <Fragment slot="title">Ustaw nowe hasło</Fragment>
  
  <UpdatePasswordForm token={token} client:load />
  
  <p slot="footer">
    <a href="/auth/login" class="text-blue-300 hover:text-blue-200 font-medium">
      Powrót do logowania
    </a>
  </p>
</AuthLayout> 